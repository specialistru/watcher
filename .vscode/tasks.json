{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Скомпилировать clipboard_watcher.c",
            "type": "shell",
            "command": "C:/mingw/w64devkit/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Werror",
                "-std=c11",
                "-O2",
                "-g",
                "-o",
                "${workspaceFolder}/build/clipboard_watcher.exe",
                "${workspaceFolder}/clipboard_watcher.c",
                "-luser32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
